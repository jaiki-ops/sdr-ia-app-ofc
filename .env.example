# Configurações de Segurança
SECRET_KEY=sdr-ia-secret-key-production-change-me-to-random-string

# Configurações de IA
OPENAI_API_KEY=sua-chave-openai-aqui

# Configurações do Flask
FLASK_ENV=production
FLASK_DEBUG=False

# Configurações do Banco de Dados
DATABASE_URL=sqlite:///src/database/app.db

# Configurações de Segurança Master
MASTER_SECURITY_KEY=sdr-ia-master-security-key-2025-change-me

# Configurações de CORS (opcional)
CORS_ORIGINS=*

# Configurações de Log (opcional)
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Configurações de Rate Limiting (opcional)
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100

# Configurações de Email (para notificações - opcional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=True

# Configurações de Backup (opcional)
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=7

